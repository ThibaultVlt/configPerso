{
    "name": "decouverte",
    "version": "1.0.0",
    "description": "## Description du projet",
    "author": "",
    "main": "index.js",
    "license": "ISC",
    "dependencies": {
        "configperso": "file:",
        "decouverte": "file:"
    },
    "devDependencies": {
        "@cspell/dict-fr-fr": "^2.2.5",
        "@cspell/dict-lorem-ipsum": "^4.0.3",
        "@github/browserslist-config": "^1.0.0",
        "@prantlf/jsonlint": "^16.0.0",
        "babel": "^6.23.0",
        "browserslist": "^4.24.2",
        "cspell": "^8.16.0",
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-compat": "^6.0.1",
        "foreach-cli": "^1.8.1",
        "hint": "^7.1.13",
        "html-w3c-validator": "^1.7.0",
        "htmlhint": "^1.1.4",
        "jsdoc": "^4.0.4",
        "markdownlint-cli": "^0.42.0",
        "mkdirp": "^3.0.1",
        "open-cli": "^8.0.0",
        "prettier": "^3.3.3",
        "sass": "^1.81.0",
        "sassdoc": "^2.7.4",
        "start-server-and-test": "^2.0.8",
        "styledown": "^2.0.0-pre1",
        "stylelint": "^16.10.0",
        "stylelint-config-standard": "^36.0.1",
        "update-browserslist-db": "^1.1.1"
    },
    "scripts": {
        "compile-css": "npx sass --style=compressed --watch src/scss:dist/css",
        "compile-js": "npx tsc --watch",
        "document-css": "npx mkdirp docs/css && npx foreach --glob src/css/**/*.css --execute\"npx styledown #{path} config.md > docs/css/#{name}.html\"",
        "document-js": "npx jsdoc --configure .jsdocrc.json src/js/",
        "document-scss": "npx sassdoc src/scss",
        "document-ts": "npx typedoc",
        "format": "npx prettier --check --loglevel log .",
        "format-css": "npx prettier --check --loglevel log src/css/**/*.css",
        "format-html": "npx prettier --check --loglevel log **/*.html",
        "format-js": "npx prettier --check --loglevel log src/js/**/*.js",
        "format-json": "npx prettier --check --loglevel log **/*.json",
        "format-md": "npx prettier --check --loglevel log **/*.md",
        "format-scss": "npx prettier --check --loglevel log src/scss/**/*.scss",
        "format-ts": "npx prettier --check --loglevel log src/ts/**/*.ts",
        "lighthouse": "npx mkdirp reports/lighthouse && npx lighthouse http://localhost:5500/--output-path ./reports/lighthouse/index.html --view",
        "lint": "npm run lint:css && npm run lint:html && npm run lint:js && npm run lint:md",
        "lint-css": "npx stylelint src/css/**/*.css --formatter verbose",
        "lint-html": "npx htmlhint **/*.html --ignore docs/**/*.html reports/**/*.html",
        "lint-js": "npx eslint --fix src/js/**/*.js",
        "lint-json": "npx jsonlint",
        "lint-md": "npx markdownlint-cli --fix **/*.md",
        "lint-scss": "npx stylelint src/scss/**/*.scss --formatter verbose",
        "lint-ts": "npx eslint --fix src/ts/**/*.ts",
        "start": "serve \"./index.html\"",
        "validate-html": "start-server-and-test \"start\" \"http://localhost:5500\"\"html-w3c-validator\"",
        "webhint": "npx mkdirp reports/webhint && npx hint http://localhost:5500/ --output .reports/webhint && npx open-cli http://localhost:5500/reports/webhinthttp-localhost-5500.html"
    }
}
